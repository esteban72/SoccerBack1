@model IEnumerable<Domain.League>

@{
    ViewBag.Title = "Ligas";
}

<h2>Ligas</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create", new { }, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Logo)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @if (!string.IsNullOrEmpty(item.Logo))
                {
                    <img src="@Url.Content(item.Logo)" alt="Image" style="width:100px;height:100px;max-width: 100%; height: auto;" />
                }
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.LeagueId }, new { @class = "btn btn-warning" })
                @Html.ActionLink("Detalle", "Details", new { id = item.LeagueId }, new { @class = "btn btn-info" })
                @Html.ActionLink("Eliminar", "Delete", new { id = item.LeagueId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
