@model IEnumerable<Domain.Tournament>

@{
    ViewBag.Title = "Torneos";
}

<h2>Torneos</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create", new { }, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Logo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Logo)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.TournamentId }, new { @class = "btn btn-warning" })
            @Html.ActionLink("Detalle", "Details", new { id = item.TournamentId }, new { @class = "btn btn-info" })
            @Html.ActionLink("Eliminar", "Delete", new { id = item.TournamentId }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
